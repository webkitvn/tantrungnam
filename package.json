{
  "name": "myan-theme",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "cross-env NODE_ENV=development concurrently \"npm run watch:css\" \"npm run watch:js\"",
    "watch:js": "node build.mjs --watch",
    "watch:css": "npx @tailwindcss/cli -i ./src/scss/main.scss -o ./assets/css/main.css --watch",
    "build": "cross-env NODE_ENV=production concurrently \"npx @tailwindcss/cli -i ./src/scss/main.scss -o ./assets/css/main.css --minify\" \"node build.mjs\""
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.14",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.1",
    "cross-env": "^7.0.3",
    "esbuild": "^0.25.10",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14"
  },
  "dependencies": {
    "@fancyapps/ui": "^5.0.36",
    "@tailwindcss/cli": "^4.1.14",
    "embla-carousel": "^8.6.0",
    "embla-carousel-autoplay": "^8.6.0",
    "embla-carousel-class-names": "^8.6.0",
    "embla-carousel-fade": "^8.6.0",
    "tailwindcss": "^4.1.14"
  }
}